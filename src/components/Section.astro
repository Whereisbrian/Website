<script>
  const s1 = document.getElementById("section");
  const s2 = document.getElementById("section2");

  if (s1) {
    const observer = new IntersectionObserver((entries) => {
      if (entries[0].isIntersecting) {
        s1.classList.add(
          "animate-in",
          "slide-in-from-bottom",
          "zoom-in",
          "fade-in",
          "duration-300"
        );
        s1.classList.remove("invisible");
      }
    });
    observer.observe(s1);
  }

  if (s2) {
    const observer = new IntersectionObserver((entries) => {
      if (entries[0].isIntersecting) {
        s2.classList.add(
          "animate-in",
          "slide-in-from-bottom",
          "zoom-in",
          "fade-in",
          "duration-500"
        );
        s2.classList.remove("invisible");
      }
    });
    observer.observe(s2);
  }
</script>
