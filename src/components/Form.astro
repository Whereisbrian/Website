  <option value="B2">B2</option>
  <option value="C1">C1</option>
  <option value="C2">C2</option>
</select>
  </>
)}

<style>
  input, select {
    @apply block my-2 py-2 px-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500;
  }
  input:focus {
    @apply border-blue-500;
    outline: none;
  }
