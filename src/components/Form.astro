---
export interface Props {
  signup? : boolean;
}
const { signup } = Astro.props;
---
<input type="text" placeholder="Identifiant" class="email"/>
<input type="password" placeholder="Mot de passe" class="password"/>
{signup && (
    <>
    <input type="password" placeholder="Confirmer le mot de passe" class="password-confirm"/>
    </>
    )}
<style>
input {
	display: block;
	margin: 0.5rem 0;
	padding: 0.5rem;
	border: 1px solid rgba(var(--accent), 25%);
	border-radius: 0.4rem;
}
</style>