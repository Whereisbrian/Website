export interface Props {
  signup? : boolean;
}
const { signup } = Astro.props;
---
{signup && (
  <>
  <input type="text" placeholder="Nom" 
  class="block my-2 py-2 px-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500 
         dark:bg-gray-800 dark:border-gray-700 dark:text-white name" />

