---
import WIButton from "../components/WIButton.astro";
---
<header>
    <a href="/"><img src="/logo.svg" alt="logo" class="logo"/></a>
    <WIButton title="Connexion" href="/login" customclass={"hlogin"}/>
    <WIButton title="Blog" href="/blog"/>
    <img src="/logout.svg" alt="logout" class="logout" style="display: none;"/>
</header>
<style lang="scss">
img {
  transition: transform 0.3s ease-in-out;
  
  &:hover {
    transform: scale(1.1); // increase the size by 10%
  }
}

    header {
        display: flex;
    }
    header .logout {
        margin-left: auto;
        margin-right: 1rem;
        width: 2rem;
        height: 2rem;
        margin-top: 1rem;
        cursor: pointer;
    }
    header .logo {
        width: 3.7rem;
        height: 3.7rem;
        margin-left: 1rem;
        margin-top: 0.5rem;
    }
</style>