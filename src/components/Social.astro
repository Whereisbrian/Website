---
export interface Props {
  platform: string;
  username?: string;
  customhref?: string;
}
const { platform, username, customhref } = Astro.props;
const [width, height] = [32, 32];
---

<a
  class="m-2 inline-block dark:invert"
  href={customhref ? customhref : `https://${platform}.com/${username}`}
  target="_blank"
  aria-label={`Profil ${platform} de l'association`}
>
  <img src={`/${platform}.svg`} width={width} height={height} alt={platform} />
</a>
