---
export interface Props {
  title: string;
  href?: string;
  customclass?: string;
}

const { title, href, customclass } = Astro.props;
---

<button class={`bg-sky-500 hover:bg-blue-500 mr-4 py-2 px-4 rounded text-black ${customclass ? customclass : ""}`}>
    {href ? (
      <a href={href}>
        <h2>{title}</h2>
      </a>
    ) : (
    <a href="#submit">
        <h2>{title}</h2>
      </a>
    )}
</button>