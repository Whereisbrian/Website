---
export interface Props {
  title: string;
  href?: string;
  customclass?: string;
}

const { title, href, customclass } = Astro.props;
---

<button class={`btn ${customclass ? customclass : ""}`}>
    {href ? (
      <a href={href}>
        <h2>{title}</h2>
      </a>
    ) : (
    <a href="#submit">
        <h2>{title}</h2>
      </a>
    )}
</button>

<style>
.btn {
    margin: 0.67rem;
    list-style: none;
    display: flex;
    padding: 0.33rem 0.67rem;
    padding: 0.33rem;
    border: none;
    background-color: white;
    background-image: none;
    background-size: 267%;
    border-radius: 0.5rem;
    background-position: 100%;
    transition: background-position 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 2.67px 4px -1.5px rgba(0, 0, 0, 0.1), 0 1.33px 2.67px -1px rgba(0, 0, 0, 0.1);
}

.btn > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0.67rem 1rem;
    border-radius: 0.23rem;
    color: #111;
    background-color: white;
    opacity: 0.8;
}

h2 {
    margin: 0;
    font-size: 0.83rem;
    transition: color 0.4s cubic-bezier(0.22, 1, 0.36, 1);
}

.btn:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
}

.btn:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
}

</style>