---
export interface Props {
  title: string;
  body?: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card flex rounded-lg bg-white bg-none p-1 dark:bg-slate-800">
  <a
    href={href}
    class="w-full rounded-md bg-white no-underline dark:bg-slate-700"
  >
    <h2 class="m-0 font-poppins text-2xl font-bold dark:text-white">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="mb-0 mt-2 dark:text-slate-300">
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    background-size: 400%;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .link-card > a {
    line-height: 1.4;
    padding: 1rem 1.3rem;
    color: #111;
    opacity: 0.8;
  }
  h2 {
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    color: #444;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
