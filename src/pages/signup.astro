---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import WIButton from '../components/WIButton.astro';
import SocialLoginButton from '../components/SocialLoginButton.astro';
import Form from '../components/Form.astro';
---

<Layout title="Where Is Brian - Inscription">
	<main class="max-w-2xl">
		<h1><span class="text-gradient">Inscription</span></h1>
		<p class="instructions flex flex-col">
			Entrez vos identifiants pour vous inscrire
		<Form signup={true}/>
		<WIButton title="Inscription" customclass="signup"/>
		<SocialLoginButton path="/google.svg" />
        Déja inscrit ? <a href="/login">Connectez-vous</a>
		</p>
		
        <ul role="list" class="link-card-grid">
			<Card
				href="/"
				title="Accueil"
				body="Retourner à l'accueil"
			/>
		</ul>
	</main>
</Layout>