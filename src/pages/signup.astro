---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import WIButton from '../components/WIButton.astro';
---

<Layout title="Where Is Brian - Inscription">
	<main>
		<h1><span class="text-gradient">Inscription</span></h1>
		<p class="instructions">
			Entrez vos identifiants pour vous inscrire
		<input type="text" placeholder="Identifiant" class="email"/>
		<input type="password" placeholder="Mot de passe" class="password"/>
		<WIButton title="Inscription" customclass="signup"/>
        Déja inscrit ? <a href="/login">Connectez-vous</a>
		</p>
		
        <ul role="list" class="link-card-grid">
			<Card
				href="/"
				title="Accueil"
				body="Retourner à l'accueil"
			/>
		</ul>
	</main>
</Layout>
<style>
	input {
		display: block;
		margin: 0.5rem 0;
		padding: 0.5rem;
		border: 1px solid rgba(var(--accent), 25%);
		border-radius: 0.4rem;
	}
	</style>